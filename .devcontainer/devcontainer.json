{
  "name": "Config Base Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "features": {
    "ghcr.io/devcontainers-extra/features/homebrew-package:1": {},
    "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {},
    "ghcr.io/devcontainers/features/node:1": {
      "pnpmVersion": "latest"
    },
    "ghcr.io/itsmechlark/features/1password:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/terraform:1": {},
    "ghcr.io/dhoeric/features/google-cloud-cli:1": {},
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers-community/npm-features/prettier:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "1.28",
      "helm": "none",
      "minikube": "none"
    },
    "ghcr.io/dhoeric/features/act:1": {}
  },
  "remoteEnv": {
    "HOMEBREW_NO_AUTO_UPDATE": "1"
  },
  "overrideCommand": true,
  "updateRemoteUserUID": false,
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/vscode/.claude,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "mblode.pretty-formatter"
      ],
      "settings": {
        "npm.packageManager": "pnpm"
      }
    }
  },
  "postCreateCommand": "sudo chown -R vscode:vscode /workspaces/config && npm ci && npm run prepare && pnpm add -g supabase && cp -r /tmp/.husky /workspaces/config/ && cp /tmp/commitlint.config.js /workspaces/config/"
}
