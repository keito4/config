{
  "permissions": {
    "allow": [
      "Bash(devcontainer build:*)",
      "Bash(ls:*)",
      "Bash(chmod:*)",
      "Bash(find:*)",
      "Bash(git add:*)",
      "WebFetch(domain:github.com)",
      "Bash(docker build:*)",
      "Bash(timeout 300 docker build -f .devcontainer/Dockerfile .)",
      "Bash(git push:*)",
      "Bash(gh issue view:*)",
      "Bash(git checkout:*)",
      "Bash(grep:*)",
      "Bash(gh pr create:*)",
      "Bash(npm install:*)",
      "Bash(git commit:*)",
      "Bash(git config:*)",
      "Bash(gh auth:*)",
      "Bash(brew bundle:*)",
      "mcp__slack__slack_list_channels",
      "mcp__slack__slack_post_message",
      "mcp__filesystem__list_allowed_directories",
      "Bash(claude config get:*)",
      "Bash(bash:*)",
      "Bash(./script/export.sh:*)"
    ],
    "deny": []
  },
  "env": {
    "CLAUDE_CODE_PROJECT_NAME": "keito4/config"
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -X POST http://host.docker.internal:5678/webhook/notify -H \\\"Content-Type: application/json\\\" -d '{\\\"project_name\\\":\\\"keito4/config\\\",\\\"task_name\\\":\\\"${CLAUDE_TASK}\\\",\\\"request_detail\\\":\\\"${CLAUDE_REQUEST}\\\"}'"
          }
        ]
      }
    ]
  }
}
