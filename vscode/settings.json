  "solargraph.definitions": true,
  "solargraph.diagnostics": true,
  "solargraph.formatting": true,
  // go
  "go.useLanguageServer": true,
  // javascript
  "[javascript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
