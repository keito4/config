{
  "name": "config",
  "version": "1.0.0",
  "description": "Personal configuration files and setup scripts",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/keito4/config.git"
  },
  "scripts": {
    "lint": "eslint . --ext .js,.jsx",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest --ci --maxWorkers=50%",
    "test:watch": "jest --watch",
    "test:coverage": "jest --ci --coverage --maxWorkers=50%",
    "test:quick": "jest --ci --maxWorkers=50% --bail --passWithNoTests --changedSince=HEAD",
    "build": "node scripts/build.js",
    "validate": "node scripts/validate.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.39.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.1.0",
    "@semantic-release/github": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "semantic-release": "^24.2.9"
  }
}
